{
  "name": "aurora",
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc",
    "lint": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\"",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\" --write",
    "postinstall": "husky install",
    "commit": "cz",
    "generate:components": "./tools/makeComponent.sh",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run"
  },
  "lint-staged": {
    "./src/**/*.{ts,js,jsx,tsx}": [
      "yarn lint --fix",
      "yarn format"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.5.10",
    "classnames": "^2.3.1",
    "disqus-react": "^1.1.2",
    "framer-motion": "5.0.0",
    "graphql": "^16.3.0",
    "highlight.js": "^11.4.0",
    "markdown-to-jsx": "^7.1.7",
    "moment": "^2.29.2",
    "motion": "^10.7.1",
    "next": "12.0.8",
    "next-pwa": "^5.4.7",
    "next-seo": "^5.3.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "^4.3.1",
    "sharp": "^0.30.3",
    "swr": "^1.3.0",
    "use-dark-mode": "^2.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@emotion/babel-plugin": "^11.7.2",
    "@emotion/core": "^11.0.0",
    "@emotion/css": "^11.9.0",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.6.0",
    "@types/node": "16.11.11",
    "@types/react": "17.0.37",
    "@typescript-eslint/eslint-plugin": "5.21.0",
    "@typescript-eslint/parser": "5.21.0",
    "autoprefixer": "^10.4.4",
    "commitizen": "^4.2.4",
    "cypress": "^9.5.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.14.0",
    "eslint-config-next": "12.1.5",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "12.4.1",
    "postcss": "^8.4.12",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.23",
    "typescript": "4.5.2",
    "webpack": "^5.9.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
